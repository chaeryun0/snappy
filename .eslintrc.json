{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks", "prettier", "jsx-a11y", "jest", "testing-library", "import"],
  "rules": {
    "linebreak-style": 0,
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-duplicate-imports": 2,

    "prettier/prettier": 0,

    "react/button-has-type": 2,

    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": 2,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,

    "react/jsx-uses-vars": 2,
    "react/jsx-filename-extension": ["warn", { "extensions": [".jsx"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
